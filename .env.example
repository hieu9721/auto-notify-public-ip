# IP Monitor Bot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Khoảng thời gian kiểm tra IP (giây)
CHECK_INTERVAL=300

# Phương thức thông báo (cách nhau bởi dấu phẩy)
# Có thể là: email, telegram, discord
NOTIFICATION_METHODS=email,telegram,discord

# =============================================================================
# EMAIL CONFIGURATION (Gmail)
# =============================================================================

# SMTP Server settings
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Email credentials
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-16-chars
EMAIL_RECIPIENT=recipient@gmail.com

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================

# Bot token từ @BotFather
TELEGRAM_BOT_TOKEN=

# Multiple Chat IDs (cách nhau bởi dấu phẩy)
# Có thể gửi đến nhiều chat/group cùng lúc
TELEGRAM_CHAT_IDS=

# Single Chat ID (để tương thích ngược)
TELEGRAM_CHAT_ID=

# =============================================================================
# DISCORD CONFIGURATION
# =============================================================================

# Multiple Webhook URLs (cách nhau bởi dấu phẩy)
# Có thể gửi đến nhiều server/channel cùng lúc
DISCORD_WEBHOOK_URLS=

# Single Webhook URL (để tương thích ngược)
DISCORD_WEBHOOK_URL=

# =============================================================================
# ADVANCED SETTINGS (Optional)
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Custom IP services (cách nhau bởi dấu phẩy)
# IP_SERVICES=https://api.ipify.org?format=json,https://httpbin.org/ip

# Retry attempts for IP fetching
# MAX_RETRIES=3

# Timeout for HTTP requests (seconds)
# REQUEST_TIMEOUT=10